{
  "name": "micro-ap",
  "version": "0.4.0",
  "description": "tiny arg parser",
  "main": "index.js",
  "types": "./dist/parser.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.prod.json",
    "watch": "tsc --watch",
    "test": "mocha test --recursive",
    "test:watch": "mocha test --watch --recursive",
    "coverage": "nyc npm run test",
    "prepare": "npm run build && npm run test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test",
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ]
  },
  "author": {
    "name": "Oleg Kamlowski",
    "email": "oleg.kamlowski@thomann.de"
  },
  "files": [
    "index.js",
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sovrin/micro-ap.git"
  },
  "keywords": [
    "micro",
    "router"
  ],
  "devDependencies": {
    "@types/node": "^14.14.14",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "typescript": "^4.1.3"
  }
}
